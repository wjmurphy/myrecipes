<%= render 'shared/page_title', title: "Chef #{@ingredient.description}" %>

<% if @ingredient.recipes.count != 0 %>
  <h4 align="center">Recipes containing<%= @ingredient.description %></h4>
  <div align="center">
    <%= will_paginate @ingredient_recipes %>
  </div>
  <%= render 'recipes/recipe', obj: @ingredient_recipes %>
  <div align="center">
    <%= will_paginate @ingredient_recipes %>
  </div>
<% else %>
  <h4 align="center">No recipes yet!</h4>
<% end %>